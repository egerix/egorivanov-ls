.review {
  display: flex;
  align-items: center;
}

.review__avatar {
  margin-right: 30px;
}

.review__pic-wrapper {
  width: 74px;
  height: 74px;
  border-radius: 50%;
  overflow: hidden;
}

.review__name {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 16px;
}

.review__occ {
  color: rgba($text-color, .3);
  font-weight: 600;
}

