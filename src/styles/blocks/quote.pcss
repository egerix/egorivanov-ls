.quote {
  padding-left: 24%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;

  &:before {
    content: "";
    display: block;
    width: 18%;
    height: 37%;
    background: svg-load('quote.svg', fill='#DDE3EC') center center / contain no-repeat;
    position: absolute;
    top: 0;
    left: 0;
  }
}

.quote__text {
  flex-grow: 1;
  margin-bottom: 30px;
  color: rgba($text-color, .6);
  font-weight: 600;
  line-height: 30px;
}