.menu__list {
    display: flex;
    justify-content: center;
}

.menu__item {
    margin-right: 60px;

    &:last-child {
        margin-right: 0;
    }

    &:hover {
        font-weight: 600;
        color: $black-text-hover;
    }
}

.menu__link {
    text-decoration: none;
    white-space: nowrap;
}

.menu--color-white {
    color: #fff;
    .menu__item {
        &:hover {
            font-weight: 600;
            color: $white-text-hover;
        }
    }
}