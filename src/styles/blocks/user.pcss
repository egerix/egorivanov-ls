.user__avatar-wrapper {
  width: 200px;
  height: 200px;
  overflow: hidden;
  border-radius: 50%;
  box-shadow: 0px 10px 24px 0 rgba(#000, .3);
  margin: 0 70px;
  flex-shrink: 0;
}

.user__table {
  padding-top: 70px;
  font-weight: 600;
  width: 100%;
}

.table__row {
  tr:last-child td {
    padding-bottom: 0;
  }
}

.user__table-title {
  padding-bottom: 19px;
  color: rgba($text-color, .5);
}

.user__table-content {
  padding-bottom: 19px;
}