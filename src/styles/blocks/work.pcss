.work {

  @include phones {
    padding: 0;
  }

  &__subtitle {
    margin-bottom: 31px;
    font-weight: bold;
    font-size: 30px;
    line-height: 41px;
    @include desktop {
      text-align: center;
    }
  }

  &__description {
    color: rgba($text-color, 0.7);
    font-size: 16px;
    font-weight: 600;
    line-height: 30px;
    margin-bottom: 39px;
    @include desktop {
      text-align: center;
    }
  }

  &__link {
    display: block;
    color: #4b6fd7;
    font-size: 18px;
    font-weight: 700;
    text-decoration: none;
    @include desktop {
      text-align: center;
    }

    &:hover {
      text-decoration: underline;
    }

    &:before {
      content: '';
      display: inline-block;
      vertical-align: baseline;
      margin-right: 15px;
      width: 15px;
      height: 15px;
      background: svg-load('link.svg', fill=#4b6fd7, width=100%, height=100%) no-repeat center;
    }
  }
}