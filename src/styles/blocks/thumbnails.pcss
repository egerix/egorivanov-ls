.thumbnails {
  &__list {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    will-change: transform;
    transition: transform .3s;
    height: calc(100px * 4 + 6px);
    overflow: hidden;
    padding: 3px;
    margin: -3px;
  }

  &__item {
    position: relative;
    flex-shrink: 0;
    cursor: pointer;
    transition: filter .5s ease-in-out;
  }

  &__item:after {
    content: '';
    position: absolute;
    top: -3px;
    right: -3px;
    bottom: -3px;
    left: -3px;
    border: 3px solid transparent;
    transition: border .5s ease-in-out;
  }

  &__item:hover:not(&__item--active) {
    filter: grayscale(100%)
  }

  &__item--active:after {
    border-color: #f29400;
  }
}