.skills-row__title {
  margin-bottom: 26px;
  font-size: 24px;
  font-weight: 700;

  @include tablets {
    text-align: center;
  }

  @include phones {
    text-align: center;
    font-size: 18px;
    line-height: 25px;
  }
}

.skills-row__list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}