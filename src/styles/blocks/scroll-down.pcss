.scroll-down__btn {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 18px;
  line-height: 25px;
  text-decoration: none;

  &:after {
    content: "";
    display: block;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) center center no-repeat;
    width: 13px;
    height: 13px;
    margin-left: 15px;
  }

  &:hover {
    text-shadow: 0 0 1px, 0 0 1px;
  }
}